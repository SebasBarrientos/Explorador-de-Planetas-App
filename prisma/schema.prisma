// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Planet {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  temperature  Float
  gravity      Float
  composition  String
  habitability String
  createdAt    DateTime @default(now())
}
